@model HornetsApplication1.Models.Result

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div id="printableArea">
    <h4>Result</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Class.ClassId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Exam)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Exam.ExamId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.StudentId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Subject.SubjectId)
        </dd>
    </dl>
</div>
<div>
    <input type="button" class="btn btn-danger" onclick="printDiv('printableArea')" value="print!" />
    |
    <button type="button" class="btn btn-info" asp-action="Edit" asp-route-id="@Model.StudentId">Edit</button> |
    <button type="button" class="btn btn-warning" asp-action="Index">Back to List</button>

</div>

<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }</script>